        android:layout_height="wrap_content"
        android:src="@drawable/at_s"
        android:id="@+id/cakee"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="To"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tujuan"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ucapanselamat"
        android:text="Ucapan Selamat" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="From"
